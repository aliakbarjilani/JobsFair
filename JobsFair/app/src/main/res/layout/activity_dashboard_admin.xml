<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.jobsfair.dashboard_admin">
    <TextView
        android:id="@+id/txtDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard" />

    <ImageView
        android:id="@+id/ImgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/logo_admin"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:textSize="16sp"
        tools:text="@string/txtTitle"
        tools:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="@string/txtSubTitle"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtKeywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Job title, Skill or Company" />

    <Spinner
        android:id="@+id/spnCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:tooltipText="city_prompt"
        android:entries="@array/city_array"
        android:prompt="@string/city_prompt" />

    <Spinner
        android:id="@+id/spnCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/category_array"
        android:prompt="@string/category_prompt" />

    <Spinner
        android:id="@+id/spnSubCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/subcategory_array"
        android:prompt="@string/subcategory_prompt" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:onClick="onSearchButtonClicked"
        android:text="Search"/>

    <Button
        android:id="@+id/btnAddJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:onClick="onAddJobButtonClicked"
        android:text="Add Job"/>

</LinearLayout>
